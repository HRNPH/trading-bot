// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
  interface = "sync"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Symbol {
  id          String   @id @default(cuid())
  symbol      String   @unique
  name        String?
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("symbols")
}

model BacktestResult {
  id          String   @id @default(cuid())
  symbol      String
  strategy    String
  timeframe   String
  startDate   DateTime
  endDate     DateTime
  totalReturn Float
  sharpeRatio Float
  maxDrawdown Float
  winRate     Float
  totalTrades Int
  parameters  String   // JSON string of strategy parameters
  createdAt   DateTime @default(now())

  @@map("backtest_results")
}

model Trade {
  id            String   @id @default(cuid())
  backtestId    String
  tradeId       String
  entryTime     DateTime
  entryPrice    Float
  exitTime      DateTime?
  exitPrice     Float?
  profitLoss    Float?
  profitLossPct Float?
  durationDays  Float?
  status        String   // OPEN, CLOSED
  createdAt     DateTime @default(now())

  @@map("trades")
} 